generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id               String   @id @default(uuid())
  alias            String
  name             String
  password         String
  date             DateTime
  local            String
  description      String
  image            String
  imageBackground  String
  expectedAudience Int
  guests           Guest[]

  @@map("events")
}

model Guest {
  id            String  @id @default(uuid())
  name          String
  email         String
  confirmed     Boolean
  hasCompanion  Boolean
  qtyCompanions Int
  event         Event?  @relation(fields: [eventId], references: [id])
  eventId       String?

  @@map("guests")
}
